<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center"
              android:paddingTop="56dp"
              android:paddingLeft="24dp"
              android:paddingRight="24dp"
              android:background="@color/backgroundFinalSecondary"
              tools:context=".fragments.VehicleAddFragment">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edTipoVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de vehículo"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edMarcaVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Marca"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edModeloVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Modelo"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/edMatriculaVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Matrícula"/>

    </android.support.design.widget.TextInputLayout>

    <Button

            android:id="@+id/bModifiedVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_dates"
            android:textColor="@color/whiteText"
            android:layout_gravity="center"
            app:backgroundTint="@color/blueButton"/>

    <ProgressBar
            android:id="@+id/vehicleModProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="250dp"
            android:max="100"
            android:indeterminate="true"
            android:progress="0"
            android:visibility="invisible"/>


</LinearLayout>